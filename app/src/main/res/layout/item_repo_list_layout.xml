<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height">
    
    <ImageView
        android:layout_width="@dimen/row_image"
        android:layout_height="@dimen/row_image"
        android:src="@drawable/repos"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/pdng_imgs"/>
    <TextView
        android:id="@+id/tv_repo_name_item_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/row_text_size"
        android:padding="@dimen/pdng_imgs"/>

    <TextView
        android:id="@+id/tv_user_name_item_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/row_text_size"
        android:padding="@dimen/pdng_imgs"/>
</LinearLayout>